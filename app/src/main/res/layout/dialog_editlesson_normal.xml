<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_editlesson_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="3pt" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/dialog_editlesson_button_cancel"
            android:layout_width="@dimen/dialog_editlesson_buttons_wh"
            android:layout_height="@dimen/dialog_editlesson_buttons_wh"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/yt_icon_popup_cancel" />

        <ImageButton
            android:id="@+id/dialog_editlesson_button_check"
            android:layout_width="@dimen/dialog_editlesson_buttons_wh"
            android:layout_height="@dimen/dialog_editlesson_buttons_wh"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/dialog_editlesson_button_cancel"
            android:background="@drawable/yt_icon_popup_ok" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_editlesson_line_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/dialog_editlesson_textview_subject"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:gravity="center"
                android:padding="@dimen/dialog_editlesson_padding"
                android:text="@string/dialog_editlesson_text_subject"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7" >

            <EditText
                android:id="@+id/dialog_editlesson_edit_subject"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:inputType="text"
                android:padding="@dimen/dialog_editlesson_padding"
                android:selectAllOnFocus="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_editlesson_line_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/dialog_editlesson_textview_location"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:gravity="center"
                android:padding="@dimen/dialog_editlesson_padding"
                android:text="@string/dialog_editlesson_text_location"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7" >

            <EditText
                android:id="@+id/dialog_editlesson_edit_location"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:inputType="text"
                android:padding="@dimen/dialog_editlesson_padding"
                android:selectAllOnFocus="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_editlesson_line_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/dialog_editlesson_textview_professor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:gravity="center"
                android:padding="@dimen/dialog_editlesson_padding"
                android:singleLine="true"
                android:text="@string/dialog_editlesson_text_professor"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7" >

            <EditText
                android:id="@+id/dialog_editlesson_edit_professor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:inputType="text"
                android:padding="@dimen/dialog_editlesson_padding"
                android:selectAllOnFocus="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_editlesson_line_height"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/dialog_editlesson_textview_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:gravity="center"
                android:padding="@dimen/dialog_editlesson_padding"
                android:singleLine="true"
                android:text="@string/dialog_editlesson_text_time"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" >

            <RelativeLayout
                android:id="@+id/dialog_editlesson_button_editstarttime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:clickable="true"
                android:padding="@dimen/dialog_editlesson_padding" >

                <TextView
                    android:id="@+id/dialog_editlesson_editstarttime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="TEXT!!"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_editlesson_textsize" />
            </RelativeLayout>
        </LinearLayout>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="~"
            android:textColor="#ffffff"
            android:textSize="@dimen/dialog_editlesson_textsize"
            android:layout_gravity="center"
            android:gravity="center" />
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" >

            <RelativeLayout
                android:id="@+id/dialog_editlesson_button_editendtime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:clickable="true"
                android:padding="@dimen/dialog_editlesson_padding" >

                <TextView
                    android:id="@+id/dialog_editlesson_editendtime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="TEXT!!"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dialog_editlesson_textsize" />
            </RelativeLayout>
        </LinearLayout>
        
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_editlesson_line_height"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/dialog_editlesson_textview_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:gravity="center"
                android:padding="@dimen/dialog_editlesson_padding"
                android:text="@string/dialog_editlesson_text_color"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:scrollbars="none" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb" >

                <RelativeLayout
                    android:id="@+id/dialog_editlesson_edit_color_border"
                    android:layout_width="@dimen/dialog_editlesson_colorpick_item_border_wh"
                    android:layout_height="@dimen/dialog_editlesson_colorpick_item_border_wh"
                    android:layout_gravity="center_vertical"
                    android:background="#ffffff"
                    android:visibility="invisible" />

                <com.sulga.yooiitable.customviews.SelectOneItemLinearLayout
                    android:id="@+id/dialog_editlesson_edit_color"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dialog_editlesson_padding" />
            </FrameLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="top|center_horizontal" >

            <TextView
                android:id="@+id/dialog_editlesson_textview_memo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:gravity="center"
                android:padding="@dimen/dialog_editlesson_padding"
                android:text="@string/dialog_editlesson_text_memo"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="7" >

            <EditText
                android:id="@+id/dialog_editlesson_edit_memo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginBottom="@dimen/dialog_editlesson_layout_margin_tb"
                android:layout_marginLeft="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginRight="@dimen/dialog_editlesson_layout_margin_lr"
                android:layout_marginTop="@dimen/dialog_editlesson_layout_margin_tb"
                android:background="@drawable/yt_settingsdialog_background"
                android:inputType="textMultiLine|text"
                android:lines="5"
                android:padding="@dimen/dialog_editlesson_padding"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/dialog_editlesson_textsize" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>