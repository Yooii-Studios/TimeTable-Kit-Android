<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2e2e2e" >

    <LinearLayout
        android:id="@+id/fragment_schedule_buttons_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fragment_schedule_additem"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/yooiitable_buttons"
            android:padding="5dp"
            android:text="@string/fragment_schedule_add_schedule"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/fragment_schedule_sync"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/yooiitable_buttons"
            android:padding="5dp"
            android:text="@string/fragment_schedule_sync"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/fragment_schedule_listscroll"
        android:layout_above="@id/fragment_schedule_buttons_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/fragment_schedule_listwrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>