<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/settings_schedule_top_pattern" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="text"
        android:textColor="#ffffff"
        android:textSize="@dimen/view_settings_title_textsize" />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="@dimen/view_settings_titlebutton_wh"
        android:layout_height="@dimen/view_settings_titlebutton_wh"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/yt_icon_schedule_cancel" />

    <ImageView
        android:id="@+id/done"
        android:layout_width="@dimen/view_settings_titlebutton_wh"
        android:layout_height="@dimen/view_settings_titlebutton_wh"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/cancel"
        android:src="@drawable/yt_icon_popup_ok" />
    <!-- android:background="@drawable/btn_check" -->
    <!--
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
    -->

</RelativeLayout>