<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/yt_appwidget_root_background_shape"
    android:padding="@dimen/appwidget_daycell_margin" >

    <LinearLayout
        android:id="@+id/appwidget_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:orientation="vertical" >
    </LinearLayout>
    <FrameLayout
        android:id="@+id/appwidget_lessonview_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        />

</FrameLayout>