<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_overlap_lessoninfo_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_overlap_lessoninfo_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="testt"
            android:textColor="#000000"
            android:textSize="@dimen/fragment_timetable_lessonview_5days_textsize" />

        <TextView
            android:id="@+id/view_overlap_lessoninfo_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="testc"
            android:textColor="#000000"
            android:textSize="@dimen/fragment_timetable_lessonview_5days_textsize" />

        <TextView
            android:id="@+id/view_overlap_lessoninfo_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="testb"
            android:textColor="#000000"
            android:textSize="@dimen/fragment_timetable_lessonview_5days_textsize" />
    </LinearLayout>

</RelativeLayout>