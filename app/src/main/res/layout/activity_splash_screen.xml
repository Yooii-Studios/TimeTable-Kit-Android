<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_vertical"
    tools:ignore="ContentDescription,UselessParent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_main"
            android:layout_width="@dimen/splash_img_size"
            android:layout_height="@dimen/splash_img_size"
            android:background="@drawable/splash_main" />

        <ImageView
            android:layout_width="@dimen/splash_company_logo_width"
            android:layout_height="@dimen/splash_company_logo_height"
            android:layout_marginTop="@dimen/splash_company_logo_margin_top"
            android:background="@drawable/splash_logo" />
    </LinearLayout>
</RelativeLayout>