    <HorizontalScrollView
        android:id="@+id/activity_appwidget_configure_pick_color_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_appwidget_configure_alphaseekbar"
        android:layout_margin="5dp" >

        <FrameLayout
            android:id="@+id/activity_appwidget_configure_pick_color_overlap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/activity_appwidget_configure_pick_color_checkimage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left|top"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_done" />

            <LinearLayout
                android:id="@+id/activity_appwidget_configure_pick_color_wrapper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </FrameLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/activity_appwidget_configure_colorpreview"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/activity_appwidget_configure_pick_color_scroll"
        android:layout_margin="5dp"
        android:background="#000000" >

        <TextView
            android:id="@+id/activity_appwidget_configure_colorpreview_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/activity_appwidget_configure_preview"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <Button
        android:id="@+id/activity_appwidget_configure_btn_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="OK" />

</RelativeLayout>